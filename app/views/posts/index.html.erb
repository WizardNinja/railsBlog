<h1>Posts Index</h1>
<div id="login_area">
	<% if current_user %>
	<div>Signed in as:<%= current_user.username %></div>
	<a href="logout">Logout</a>
	<% else %>
		<a href="login">Login</a>
		<a href="/users/new">Create new account</a>
	<% end %>
</div>

<div id="post_form_area">
	<a id="new_post" href="#">New Post</a>
	<form id="post_form" action="/posts" method="post" class="hidden">
		<input type="text" placeholder="title" name="title">
		<input type="text" placeholder="url" name="url">
		<input type="submit" value="New Post">
	</form>
</div>

<div id="posts_area">
	<% @posts.each do |post| %>
		<%= render 'post', post: post %>
	<% end %>
</div>